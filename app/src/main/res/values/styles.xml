<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#B39DDB</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout" parent="size">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_4</item>
    </style>

    <style name="PlayActivityText" parent="size">
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_4</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

</resources>
